{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "public/**",
        "build/**",
        ".vercel/**",
        "out/**"
      ],
      "env": ["VERCEL"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
} 